{
  "actorSpecification": 1,
  "name": "sven-scraping-projects",
  "title": "UKE & Apotheker Kammer Scraper",
  "version": "0.1",
  "description": "Scrapes UKE doctor profiles and Apotheker Kammer Hamburg pharmacy listings. Runs both spiders sequentially in a single run.",
  "defaultRunOptions": {
    "timeoutSecs": 900
  },
  "storages": {
    "dataset": {
      "actorSpecification": 1,
      "fields": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "description": "Spider that produced this record: uke or apothekerkammer-hamburg"
          },
          "name": { "type": "string" },
          "url": { "type": "string" },
          "title": { "type": "string" },
          "department": { "type": "string" },
          "specialties": { "type": "string" },
          "work_area": { "type": "string" },
          "telephone": { "type": "string" },
          "fax": { "type": "string" },
          "email": { "type": "string" },
          "location": { "type": "string" },
          "languages": { "type": "string" },
          "areas_of_expertise": { "type": "string" },
          "areas_of_activity": { "type": "string" },
          "address": { "type": "string" },
          "phone": { "type": "string" },
          "website": { "type": "string" }
        },
        "additionalProperties": true
      },
      "views": {
        "overview": {
          "title": "Results",
          "transformation": {
            "fields": ["source", "name", "url", "title", "department", "address", "phone", "telephone", "email"]
          },
          "display": {
            "component": "table",
            "properties": {
              "source": { "label": "Source", "format": "text" },
              "name": { "label": "Name", "format": "text" },
              "url": { "label": "URL", "format": "link" },
              "title": { "label": "Title", "format": "text" },
              "department": { "label": "Department", "format": "text" },
              "address": { "label": "Address", "format": "text" },
              "phone": { "label": "Phone", "format": "text" },
              "telephone": { "label": "Telephone", "format": "text" },
              "email": { "label": "Email", "format": "text" }
            }
          }
        }
      }
    }
  }
}
